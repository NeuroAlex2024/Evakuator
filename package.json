{
  "name": "evacuator-website",
  "version": "1.0.0",
  "description": "Продающий сайт для службы эвакуации автомобилей в Москве и МО",
  "main": "index.html",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "install-browsers": "playwright install",
    "serve": "npx http-server . -p 3000 -o",
    "build": "echo 'Static site - no build needed'",
    "lint:html": "html-validate *.html",
    "lint:css": "stylelint *.css",
    "lint:js": "eslint *.js",
    "optimize": "npm run optimize:images && npm run optimize:css",
    "optimize:images": "echo 'Image optimization placeholder'",
    "optimize:css": "csso styles.css --output styles.min.css"
  },
  "keywords": [
    "эвакуатор",
    "москва",
    "эвакуация",
    "автомобиль",
    "срочно",
    "24/7",
    "лендинг"
  ],
  "author": "ЭвакуаторПро",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "http-server": "^14.1.1",
    "html-validate": "^8.7.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.54.0",
    "csso-cli": "^4.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evacuator-pro/website.git"
  },
  "bugs": {
    "url": "https://github.com/evacuator-pro/website/issues"
  },
  "homepage": "https://evacuator-pro.github.io/website/"
} 